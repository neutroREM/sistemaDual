
@{
    ViewData["Title"] = "AlumnosDual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
 
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">
}
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-second-primary">
            <h6 class="m-0 font-weight-bold text-white">Lista de Alumnos</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-3">
                    <button class="btn btn-success" id="btnNuevo"><i class="fas fa-user-plus" ></i> Nuevo Alumno</button>
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    AlumnoDualID
                                </th>
                                <th>
                                    Matricula
                                </th>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    ApellidoP
                                </th>
                                <th>
                                    ApellidoM
                                </th>
                                <th>
                                    Telefono
                                </th>
                                <th>
                                   Correo
                                </th>
                                <th>
                                    Cuatrimestre
                                </th>
                                <th>
                                    Tipo
                                </th>
                                <th>
                                    Promedio
                                </th>
                                <th>
                                    FechaRegistro
                                </th>
                                <th>
                                    EsActivo
                                </th>
                                <th>
                                    ProgramaEducativoID
                                </th>
                                <th>
                                    RolID
                                </th>
                                <th>
                                    DomicilioID
                                </th>
                                <th>
                                    EstatusID
                                </th>
                                <th>
                                    BecaDualID
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--  Modal-->
    <div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6>Detalle Usuario</h6>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtAlumnoDualID">CURP</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtAlumnoDualID" name="AlumnoDualID">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtMatricula">Matricula</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtMatricula" name="Matricula">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtNombre">Nombre</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtNombre" name="Nombre">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtApellidoP">Apellido Paterno</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtApellidoP" name="ApellidoP">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtApellidoM">Apellido Materno</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtApellidoM" name="ApellidoM">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtTelefono">Telefono</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtTelefono" name="Telefono">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtCorreo">Correo</label>
                                        <input type="email" class="form-control form-control-sm input-validar" id="txtCorreo" name="Correo">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtCuatrimestre">Cuatrimestre</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtCuatrimestre" name="Cuatrimestre">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtTipo">TipoAlumno</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtTipo" name="Tipo">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtPromedio">Promedio</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="txtPromedio" name="Promedio">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtFechaRegistro">FechaRegistro</label>
                                        <input type="date" class="form-control form-control-sm input-validar" id="txtFechaRegistro" name="FechaRegistro">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="cboEstado">Estado</label>
                                        <select class="form-control form-control-sm" id="cboEstado">
                                            <option value="1">Activo</option>
                                            <option value="0">No Activo</option>
                                        </select>
                                    </div> 
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtProgramaEducativoID">PE</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="txtProgramaEducativoID" name="ProgramaEducativoID">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="cboRolID">RolID</label>
                                        <select class="form-control form-control-sm" id="cboRolID">
                                        </select>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtDomicilioID">DomicilioID</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="txtDomicilioID" name="DomicilioID">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtEstatusID">Estatus</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="txtEstatusID" name="EstatusID">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtBecaDualID">Beca</label>
                                        <input type="number" class="form-control form-control-sm input-validar" id="txtBecaDualID" name="ProgramaEducativoID">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <img id="imgUsuario" style="max-width:200px;" src="https://images.unsplash.com/photo-1519648023493-d82b5f8d7b8a?w=300" class="rounded mx-auto d-block" alt="Foto usuario">
                            </div>

                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

@section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script src="~/vendor/datatables/extensiones/js/dataTables.responsive.min.js"></script>

    <script src="~/vendor/datatables/extensiones/js/dataTables.buttons.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/jszip.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.html5.min.js"></script>
    <script src="~/vendor/datatables/extensiones/js/buttons.print.min.js"></script>

    <!-- VistasJS -->
    <script src="~/js/vistas/AlumnosDuales_Index.js"></script>
}